<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <stan.rgcc.demo.ui.views.StateBadgeButton
            android:id="@+id/statebadge"
            android:padding="16dp"
            app:button_icon="@drawable/ic_sync_white_48dp"
            app:button_icon_size="48dp"
            app:button_text="sync12345678990"
            app:button_text_size="18dp"
            app:color_on="@color/red"
            app:color_off="@color/black"
            app:badge_radius="18dp"
            app:badge_color="@color/blue"
            app:badge_text_color="@color/white"
            app:badge_text_size="24dp"
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <Button
            android:id="@+id/badgeup"
            android:text="badgeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/badgeclean"
            android:text="badgeclean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonoff"
            android:text="buttonoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <stan.rgcc.demo.ui.views.StateBadgeButton
            android:id="@+id/car"
            android:padding="8dp"
            app:button_icon="@drawable/ic_directions_car_white_48dp"
            app:button_icon_size="24dp"
            app:button_text="car"
            app:button_text_size="12dp"
            app:color_on="@color/white"
            app:color_off="@color/black"
            app:badge_radius="18dp"
            app:badge_color="@color/blue"
            app:badge_text_color="@color/white"
            app:badge_text_size="24dp"
            android:layout_width="128dp"
            android:layout_height="96dp"/>
    </LinearLayout>
</LinearLayout>