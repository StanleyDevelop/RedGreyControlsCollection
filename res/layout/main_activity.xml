<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/black"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/yellow"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/switch_white_text"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <stan.rgcc.demo.ui.views.Switch
            android:id="@+id/switcher_white"
            app:text_color="@color/black"
            app:inner_circle_color="@color/red"
            app:left_text="Само собой"
            app:right_text="Нет"
            app:text_size="18dp"
            app:circle_size="12dp"
            app:circle_color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/blue"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/switch_blue_text"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <stan.rgcc.demo.ui.views.Switch
            android:id="@+id/switcher_blue"
            app:text_color="@color/white"
            app:inner_circle_color="@color/white"
            app:left_text="Сегодня"
            app:right_text="Завтра"
            app:text_size="16dp"
            app:circle_size="16dp"
            app:circle_color="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bckfwd_text"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <stan.rgcc.demo.ui.views.BackForward
            android:id="@+id/bckfwd"
            app:inner_color="@color/red"
            app:outer_color="@color/graylight"
            app:ripple_color="@color/white_trans"
            app:circle_size="36dp"
            app:back_icon="@drawable/ic_arrow_back_white_48dp"
            app:back_icon_tint="@color/white"
            app:back_icon_size="48dp"
            app:forward_icon="@drawable/ic_arrow_forward_white_48dp"
            app:forward_icon_size="48dp"
            app:between_padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/blue"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <stan.rgcc.demo.ui.views.BackForward
            app:inner_color="@color/blue_trans"
            app:outer_color="@color/white"
            app:ripple_color="@color/blue_trans"
            app:circle_size="24dp"
            app:back_icon="@drawable/ic_arrow_back_white_48dp"
            app:back_icon_tint="@color/white"
            app:back_icon_size="24dp"
            app:forward_icon="@drawable/ic_arrow_forward_white_48dp"
            app:forward_icon_tint="@color/blue"
            app:forward_icon_size="36dp"
            app:between_padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>