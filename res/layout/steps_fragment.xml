<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/steps_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <stan.rgcc.demo.ui.views.Steps
            android:id="@+id/steps_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:between_steps_padding="12dp"
            app:current_step_circle_color="@color/red"
            app:step_circle_color="@color/graylight"
            app:step_circle_radius="16dp"
            app:step_text_color="@color/white"
            app:step_text_size="24dp"
            app:steps_count="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <stan.rgcc.demo.ui.views.Steps
            android:id="@+id/steps_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:between_steps_padding="12dp"
            app:current_step_circle_color="@color/blue_trans"
            app:step_circle_color="@color/white"
            app:step_circle_radius="22dp"
            app:step_text_color="@color/blue"
            app:step_text_size="24dp"
            app:steps_count="3"
            app:steps_orientation="1"/>
    </LinearLayout>
</LinearLayout>