<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/blue"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <stan.rgcc.demo.ui.views.Dots
        android:id="@+id/dots"
        android:background="@color/white"
        app:dot_icon="@drawable/dot"
        app:dot_size="44dp"
        app:dot_text_color="@color/white"
        app:dot_text_size="20dp"
        android:layout_width="match_parent"
        android:layout_height="256dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="select enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/select_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="try add enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/try_add_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="show numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/show_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/clear"
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>