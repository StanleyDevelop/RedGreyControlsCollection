<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@color/black"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <stan.rgcc.demo.ui.views.ListSteps
            app:background_fill="#f5f5f5"
            app:access_fill_color="@color/white"
            app:access_icon_color="#b2b2b2"
            app:denied_fill_color="#e7e7e7"
            app:denied_icon_color="#d1d1d1"
            app:current_fill="#f24041"
            app:current_drawable="@drawable/list_steps_current"
            app:current_drawable_size="60dp"
            android:id="@+id/list_steps"
            android:layout_width="103dp"
            android:layout_height="wrap_content"/>
    </ScrollView>
</FrameLayout>